<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>InitParamsServlet</servlet-name>
    <servlet-class>fighter.InitParamsServlet</servlet-class>


    <init-param>
      <param-name>title</param-name>
      <param-value>ServletConfigDemo</param-value>
    </init-param>

    <init-param>
      <param-name>configStyle</param-name>
      <param-value>XML</param-value>
    </init-param>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>InitParamsServlet</servlet-name>
    <url-pattern>/param</url-pattern>
  </servlet-mapping>


  <context-param>
    <param-name>author</param-name>
    <param-value>dustin</param-value>
  </context-param>

  <context-param>
    <param-name>father</param-name>
    <param-value>porier</param-value>
  </context-param>
</web-app>
